<!-- shop-area start -->
@using (Html.BeginForm())
{
    <div class="shop-area">
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <div class="row">
                        <div class="col-md-5 col-sm-5 col-xs-12">
                            <div class="single-pro-tab-content">
                                <!-- Tab panes -->
                                <div class="tab-content">
                                    <div role="tabpanel" class="tab-pane active" id="home"><a href="#"><img class="zoom" src="~/myContant/img/product/@Model.img_1" data-zoom-image="~/myContant/img/product/@Model.img_1" alt="" /></a></div>
                                    <div role="tabpanel" class="tab-pane" id="profile"><a href="#"><img class="zoom" src="~/myContant/img/product/@Model.img_2" data-zoom-image="~/myContant/img/product/@Model.img_2" alt="" /></a></div>
                                    <div role="tabpanel" class="tab-pane" id="messages"><a href="#"><img class="zoom" src="~/myContant/img/product/@Model.img_3" data-zoom-image="~/myContant/img/product/@Model.img_3" alt="" /></a></div>
                                    <div role="tabpanel" class="tab-pane" id="settings"><a href="#"><img class="zoom" src="~/myContant/img/product/@Model.img_4" data-zoom-image="~/myContant/img/product/@Model.img_4" alt="" /></a></div>
                                    <div role="tabpanel" class="tab-pane" id="settingss"><a href="#"><img class="zoom" src="~/myContant/img/product/@Model.img_4" data-zoom-image="~/myContant/img/product/@Model.img_4" alt="" /></a></div>
                                </div>
                                <!-- Nav tabs -->
                                <ul class="single-product-tab" role="tablist">
                                    <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab"><img src="~/myContant/img/product/@Model.img_1" alt="" /></a></li>
                                    <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab"><img src="~/myContant/img/product/@Model.img_2" alt="" /></a></li>
                                    <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab"><img src="~/myContant/img/product/@Model.img_3" alt="" /></a></li>
                                    <li role="presentation"><a href="#settingss" aria-controls="settings" role="tab" data-toggle="tab"><img src="~/myContant/img/product/@Model.img_4" alt="" /></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-7 col-sm-7 col-xs-12 shop-list shop-details">
                            <div class="product-content">
                                <h3><a href="product-details.html">@Model.name</a></h3>
                                <div class="price">
                                    <span>@Model.price</span>

                                </div>
                                <div class="s-p-rating">
                                    <span class="rating">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star-o"></i>
                                    </span>
                                    <span class="review-no">04 Review (s)</span>
                                </div>
                                <p>@Model.description</p>

                                <div class="pro-size">
                                    <label>Size <span>*</span></label>
                                    <select id="sizeSelector" name="size">
                                        <option value="1">Choose A Size</option>
                                        <option value="Small">Small</option>
                                        <option value="Medium">Medium</option>
                                        <option value="Large">Large</option>
                                    </select>
                                </div>

                                <div class="product-action">
                                    <div class="cart-plus">

                                        <div class="cart-plus-minus"><input type="number" value="1" name="quantity" /></div>

                                    </div>
                                    <div class="button-top">
                                        <a href="#"><i class="fa fa-heart"></i></a>
                                    </div>
                                    <div class="button-cart">
                                        <button type="submit" formaction="@Url.Action("addToCart", "store", new { id = Model.id })"><i class="fa fa-shopping-cart"></i> add to cart</button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                    <br />
                    <br />

                    
                </div>
                <!-- left-sidebar start -->
                <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                    <!-- widget-categories start -->
                    <aside class="widget widget-categories">
                        <h3 class="sidebar-title">Categories</h3>
                        <ul class="sidebar-menu">
                            <li><a href="@Url.Action("shop", "store", new { id = 1 })">TOPS</a> </li>
                            <li><a href="@Url.Action("shop", "store", new { id = 2 })">BOTTOMS</a> </li>
                            <li><a href="@Url.Action("shop", "store", new { id = 3 })">DRESSES</a> </li>
                            <li><a href="@Url.Action("shop", "store", new { id = 4 })">KNITS</a> </li>
                            <li><a href="@Url.Action("shop", "store", new { id = 5 })">ACCESSORY</a></li>
                        </ul>
                    </aside>
                    <!-- widget-categories end -->
                    <!-- widget start -->
            
                    <!-- widget end -->
                    <!-- widget-tags start -->
                    <aside class="widget product-tag">
                        <h3 class="sidebar-title">Popular Tags</h3>
                        <ul>
                            <li><a href="#">Top</a></li>
                            <li><a href="#">Fashion</a></li>
                            <li><a href="#">Collection</a></li>
                            <li><a href="#">Women</a></li>
                            <li><a href="#">men</a></li>
                            <li><a href="#">gallery</a></li>
                            <li><a href="#">new</a></li>
                            <li><a href="#">Collection men</a></li>
                            <li><a href="#">Top</a></li>
                            <li><a href="#">Fashion</a></li>
                            <li><a href="#">Collection</a></li>
                            <li><a href="#">best</a></li>
                            <li><a href="shop.html">cloth</a></li>
                        </ul>
                    </aside>
                    <!-- widget-tags end -->
                   
                </div>
                <!-- left-sidebar end -->
            </div>
        </div>
    </div>
}
<!-- shop-area end -->
<!-- brand-area start -->

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
@if (TempData["notLogedin"] != null && (bool)TempData["notLogedin"] == true)
{
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            Swal.fire({
                title: 'You need to log in',
                text: 'Please log in to add items to your cart.',
                icon: 'warning',
                confirmButtonText: 'Login',
                showCancelButton: true,
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '@Url.Action("login_signup", "store")'; // Redirect to the login page
                }
            });
        });
    </script>
}

